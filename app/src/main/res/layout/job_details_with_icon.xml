<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <ImageView
        android:layout_width="50dp"
        android:id="@+id/child_icon"
        android:layout_height="50dp"
       android:scaleType="centerInside"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/child_list_item_job_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="@color/material_black"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/child_icon"
        android:layout_toEndOf="@+id/child_icon"
        android:text="Crime DateCrime DateCrime DateCrime DateCrime DateCrime DateCrime DateCrime DateCrime DateCrime Date" />


</RelativeLayout>