<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.gobd.tracker.ui.fragment.TaskFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">

            <TextView android:id="@+id/tv_subtotal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Subtotal : "/>

            <TextView android:id="@+id/tv_vat"
                      android:layout_below="@id/tv_subtotal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Vat : "/>

            <TextView android:id="@+id/tv_del_charge"
                      android:layout_below="@id/tv_vat"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Delivery Charge : "/>

            <TextView android:id="@+id/tv_total"
                      android:layout_below="@id/tv_del_charge"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Total : "/>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
